{
	"name": "kinesis/multicoin-address-validator",
	"version": "1.0.0",
	"description": "Simple wallet address validator for validating Bitcoin and other altcoins addresses in Node.js and browser",
	"type": "module",
	"main": "./dist/wallet-address-validator.cjs.js",
	"module": "./dist/wallet-address-validator.esm.js",
	"types": "./dist/wallet_address_validator.d.ts",
	"exports": {
		".": {
			"import": "./dist/wallet-address-validator.esm.js",
			"require": "./dist/wallet-address-validator.cjs.js",
			"types": "./dist/wallet_address_validator.d.ts"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"bitcoin",
		"cryptocurrency",
		"address",
		"validator",
		"wallet",
		"altcoin",
		"ethereum",
		"stellar",
		"ripple"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"dependencies": {
		"@noble/hashes": "^2.0.1",
		"@scure/base": "^2.0.0",
		"base-x": "^4.0.1",
		"cbor-js": "^0.1.0",
		"crc": "^4.3.2",
		"js-sha3": "^0.9.3",
		"js-sha512": "^0.9.0",
		"jssha": "^3.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^20.19.27",
		"@vitest/coverage-v8": "^1.6.1",
		"algosdk": "^3.5.2",
		"rollup-plugin-visualizer": "^6.0.5",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"vitest": "^1.6.1"
	}
}