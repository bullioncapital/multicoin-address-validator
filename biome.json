{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**", "test/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
